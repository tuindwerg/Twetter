<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_post_tweet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nl.saxion.joep.twetter.Activities.PostTweetActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="16dp">

    <Button
        android:id="@+id/bttn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:text="X"
        android:textColor="#FFF"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="10dp"
        app:layout_constraintLeft_toLeftOf="@+id/activity_post_tweet"
        tools:layout_constraintLeft_creator="0"
        app:layout_constraintTop_toTopOf="@+id/activity_post_tweet"
        android:layout_marginTop="10dp"
        tools:layout_constraintTop_creator="0" />

    <EditText
        android:id="@+id/et_tweet"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:ems="7"
        android:gravity="top|left"
        android:inputType="text|textMultiLine"
        android:lines="7"
        android:hint="What's on your mind today?"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="74dp"
        app:layout_constraintLeft_toLeftOf="@+id/activity_post_tweet"
        tools:layout_constraintLeft_creator="0"
        app:layout_constraintTop_toBottomOf="@+id/bttn_close"
        android:layout_marginTop="13dp"
        tools:layout_constraintTop_creator="0" />

    <Button
        android:text="Send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="310dp"
        android:id="@+id/bttn_send"
        app:layout_constraintLeft_toLeftOf="@+id/et_tweet"
        tools:layout_constraintLeft_creator="0"
        app:layout_constraintTop_toBottomOf="@+id/et_tweet"
        tools:layout_constraintTop_creator="0" />

    <TextView
        android:text="Characters left:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="112dp"
        tools:layout_editor_absoluteY="326dp"
        android:id="@+id/textView3"
        app:layout_constraintLeft_toRightOf="@+id/bttn_send"
        android:layout_marginStart="24dp"
        tools:layout_constraintLeft_creator="0"
        app:layout_constraintTop_toTopOf="@+id/bttn_send"
        tools:layout_constraintTop_creator="0"
        app:layout_constraintBottom_toBottomOf="@+id/bttn_send"
        tools:layout_constraintBottom_creator="0" />

    <TextView
        android:text="140"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="222dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteY="326dp"
        android:id="@+id/tv_charcount"
        app:layout_constraintLeft_toRightOf="@+id/textView3"
        android:layout_marginStart="16dp"
        tools:layout_constraintLeft_creator="0"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        tools:layout_constraintTop_creator="0"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        tools:layout_constraintBottom_creator="0" />
</android.support.constraint.ConstraintLayout>
